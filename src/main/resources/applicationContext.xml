<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/> <!-- говорим spring`у что хотим настраивать бины через аннотации -->
    <context:component-scan base-package="ru.chitushka"/> <!-- указываем пакет с которого начнется сканирование поиск аннотаций -->
    <context:property-placeholder location="classpath*:/*.properties"/> <!-- здесь будут искаться property файлы -->

</beans>